{
  "manifest_version": 3,
  "name": "Codebeamer Assistant",
  "description": "A browser extension assisting with Codebeamer tasks",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_icon": "icon-34.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://directline.botframework.com/*",
    "https://*.botframework.com/*",
    "https://login.microsoftonline.com/*",
    "https://graph.microsoft.com/*"
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://trial.codebeamer.com/*",
        "https://codebeamer.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    }
  ]
}
